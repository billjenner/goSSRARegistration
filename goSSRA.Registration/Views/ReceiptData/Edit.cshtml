@model goSSRA.Registration.Models.ReceiptData

@{
    ViewBag.Title = "Edit";
}
<br />
<br />
<h2>Receipt Data</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<br />
<p>Information that appears on confirmation receipt in addition to the program details selected by the user.</p>
<br />
    <fieldset class="form-horizontal">
        <legend>Extra Email Recipients</legend>
        @Html.HiddenFor(model => model.ReceiptDataID)

        <div class="control-group">
            @Html.LabelFor(model => model.EmailRecipient1, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.EmailRecipient1)
                @Html.ValidationMessageFor(model => model.EmailRecipient1, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.EmailRecipient2, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.EmailRecipient2)
                @Html.ValidationMessageFor(model => model.EmailRecipient2, null, new { @class = "help-inline" })
            </div>
        </div>
        <legend>Receipt Top Info</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.HeaderInfo, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.HeaderInfo, new { @rows = 10 })
                @Html.ValidationMessageFor(model => model.HeaderInfo, null, new { @class = "help-inline" })
            </div>
        </div>
        <legend>Receipt Bottom Info</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.Footer1Info, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Footer1Info, new { @rows = 10 })
                @Html.ValidationMessageFor(model => model.Footer1Info, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Footer2Info, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Footer2Info, new { @rows = 10 })
                @Html.ValidationMessageFor(model => model.Footer2Info, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Footer3Info, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Footer3Info, new { @rows = 10 })
                @Html.ValidationMessageFor(model => model.Footer3Info, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

